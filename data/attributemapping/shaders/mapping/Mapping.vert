
#version 330


////////////////////////////////////////////////////////////////////////////////////////////////////
// Input data
////////////////////////////////////////////////////////////////////////////////////////////////////

// Input vector (x/y/z) that is transformed into an actual 3D-position
layout (location = 0) in vec4 position;

// Node-ID / Line-ID / Time / -
layout (location = 1) in vec4 attrs;


////////////////////////////////////////////////////////////////////////////////////////////////////
// Output to geometry shader
////////////////////////////////////////////////////////////////////////////////////////////////////

// Node-ID / Line-ID / Time / -
out vec4 v_attrs;


////////////////////////////////////////////////////////////////////////////////////////////////////
// Vertex shader
////////////////////////////////////////////////////////////////////////////////////////////////////

void main()
{
    v_attrs = attrs;
}
